<style>
  html {
    width: 100%;
    height: 100%;
    background: #ffffff;
    background-image: url(<%= pdf_background %>);
  }

  section.postcard-page {
    width: 101mm;
    height: 148mm;
  }

  section.photos {
    float:left;
    width: 101mm;
    height: 128mm;
  }

  section.title {
    float: left;
    width: 101mm;
    height: 20mm;
  }

  .photo-container {
    width: 140px;
    height: 210px;
    float: left;
    border: 5px solid #000000;
    margin: 30px 0px 0px 25px;
  }

  .photo-container img {
    width: 100%;
    height: 100%;
  }

  h2 {
    font-size: 35px;
    width: 85mm;
    padding:4px;
    margin-left: 25px;
    text-shadow: 0px 0px 4px #FFFFFF;
    font-family: 'Buenard', serif;
  }

</style>
<section class="postcard-page">
  <section class="photos">
    <% shoot.images.each do |image| %>
      <div class="photo-container">
        <%= pdf_image_tag image.image.url(:headshot) %>
      </div>
    <% end %>
  </section>
  <section class="title">
    <div class="print-title">
      <h2>G & T - 20 July 2019</h2>
    </div>
  </section>
</section>

